{
    "title": "picgo-core-profile-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "empty-string": {
            "const": ""
        },
        "repo": {
            "type": "string",
            "pattern": "^[\\w-]+/[\\w-]+$",
            "default": "",
            "description": "The name of your repo, include username and reponame. For example: \"microsoft/vscode\""
        },
        "branch": {
            "type": "string",
            "default": "master"
        },
        "token": {
            "type": "string",
            "default": "",
            "pattern": "^[a-z0-9A-Z]+$"
        },
        "path": {
            "type": "string",
            "default": ""
        },
        "url": {
            "type": "string",
            "default": ""
        },
        "origin": {
            "description": "the git origin repository hosting, such as github/gitee",
            "type": "string"
        },
        "options": {
            "type": "string",
            "default": ""
        },
        "authId": {
            "type": "string",
            "default": "",
            "pattern": "^[a-z0-9A-Z]+$"
        },
        "authKey": {
            "type": "string",
            "default": "",
            "pattern": "^[a-z0-9A-Z]+$"
        },
        "bucket": {
            "description": "name of bucket",
            "type": "string",
            "default": "",
            "pattern": ".+"
        },
        "area": {
            "type": "string",
            "default": "",
            "pattern": ".+"
        },
        "gitHosting": {
            "comment": "general git hosting",
            "type": "object",
            "properties": {
                "repo": {
                    "$ref": "#/definitions/repo"
                },
                "branch": {
                    "$ref": "#/definitions/branch"
                },
                "token": {
                    "$ref": "#/definitions/token"
                },
                "path": {
                    "$ref": "#/definitions/path"
                }
            },
            "required": [
                "repo",
                "branch",
                "token"
            ]
        }
    },
    "properties": {
        "picBed": {
            "description": "Picgo main configuration:\nhttps://picgo.github.io/PicGo-Core-Doc/zh/guide/config.html#picbed\n\nBuilt in uploaders:\nsmms: SM.MS\ntcyun: 腾讯云COS\nupyun: 又拍云\naliyun: 阿里云OSS\nqiniu: 七牛云\nimgur: Imgur\nweibo: 微博图床\ngithub: Github\n更多图床支持请下载插件。\n",
            "properties": {
                "uploader": {
                    "description": "current uploader in use.",
                    "type": "string",
                    "default": "smms"
                },
                "transformer": {
                    "type": "string",
                    "enum": [
                        "path",
                        "base64"
                    ],
                    "default": "path"
                },
                "smms": {
                    "description": "SM.MS:\nhttps://sm.ms/\n",
                    "type": "object",
                    "properties": {
                        "token": {
                            "description": "Please provide api token, see https://sm.ms/home/apitoken",
                            "$ref": "#/definitions/token"
                        }
                    },
                    "default": {
                        "token": ""
                    }
                },
                "imgur": {
                    "description": "Imgur: https://imgur.com/",
                    "type": "object",
                    "properties": {
                        "clientId": {
                            "type": "string",
                            "pattern": ".+"
                        },
                        "proxy": {
                            "description": "for example: http://127.0.0.1:1080",
                            "type": "string"
                        }
                    },
                    "required": [
                        "clientId"
                    ],
                    "default": {
                        "clientId": ""
                    }
                },
                "github": {
                    "description": "Github: https://github.com/",
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/gitHosting"
                        }
                    ],
                    "properties": {
                        "repo": {
                            "description": "The repository info, including username and reponame.\n\nFor example: if the repository url is \"https://github.com/microsoft/vscode\", the \"repo\" should be \"microsoft/vscode\""
                        },
                        "token": {
                            "description": "Github tokens: https://github.com/settings/tokens"
                        },
                        "customUrl": {
                            "$ref": "#/definitions/url"
                        }
                    },
                    "required": [
                        "repo",
                        "token"
                    ],
                    "default": {
                        "repo": "",
                        "branch": "master",
                        "token": ""
                    }
                },
                "qiniu": {
                    "properties": {
                        "accessKey": {
                            "$ref": "#/definitions/authKey"
                        },
                        "secretKey": {
                            "$ref": "#/definitions/authKey"
                        },
                        "bucket": {
                            "$ref": "#/definitions/bucket"
                        },
                        "url": {
                            "$ref": "#/definitions/url",
                            "pattern": ".+"
                        },
                        "area": {
                            "$ref": "#/definitions/area"
                        },
                        "options": {
                            "$ref": "#/definitions/options"
                        },
                        "path": {
                            "$ref": "#/definitions/path"
                        }
                    },
                    "required": [
                        "accessKey",
                        "secretKey",
                        "bucket",
                        "url"
                    ],
                    "default": {
                        "accessKey": "",
                        "secretKey": "",
                        "bucket": "",
                        "area": "",
                        "url": ""
                    }
                },
                "tcyun": {
                    "properties": {
                        "secretId": {
                            "$ref": "#/definitions/authId"
                        },
                        "secretKey": {
                            "$ref": "#/definitions/authKey"
                        },
                        "bucket": {
                            "$ref": "#/definitions/bucket"
                        },
                        "appId": {
                            "type": "string",
                            "default": "",
                            "pattern": ".+"
                        },
                        "area": {
                            "$ref": "#/definitions/area"
                        },
                        "path": {
                            "$ref": "#/definitions/path"
                        },
                        "customUrl": {
                            "$ref": "#/definitions/url"
                        },
                        "version": {
                            "type": "string",
                            "default": "v5",
                            "enum": [
                                "v5",
                                "v4"
                            ]
                        }
                    },
                    "required": [
                        "secretId",
                        "secretKey",
                        "bucket",
                        "appId",
                        "area"
                    ],
                    "default": {
                        "secretId": "",
                        "secretKey": "",
                        "appId": "",
                        "bucket": "",
                        "area": ""
                    }
                },
                "aliyun": {
                    "description": "AliYun OSS: https://oss.console.aliyun.com/bucket",
                    "properties": {
                        "accessKeyId": {
                            "$ref": "#/definitions/authId"
                        },
                        "accessKeySecret": {
                            "$ref": "#/definitions/authKey"
                        },
                        "bucket": {
                            "$ref": "#/definitions/bucket"
                        },
                        "area": {
                            "$ref": "#/definitions/area",
                            "description": "for example: oss-cn-shanghai"
                        },
                        "path": {
                            "$ref": "#/definitions/path"
                        },
                        "customUrl": {
                            "$ref": "#/definitions/url"
                        },
                        "options": {
                            "$ref": "#/definitions/options"
                        }
                    },
                    "required": [
                        "accessKeyId",
                        "accessKeySecret",
                        "bucket",
                        "area"
                    ],
                    "default": {
                        "accessKeyId": "",
                        "accessKeySecret": "",
                        "bucket": "",
                        "area": ""
                    }
                },
                "upyun": {
                    "properties": {
                        "bucket": {
                            "$ref": "#/definitions/bucket"
                        },
                        "operator": {
                            "type": "string",
                            "default": "",
                            "pattern": ".+"
                        },
                        "password": {
                            "type": "string",
                            "default": "",
                            "pattern": ".+"
                        },
                        "options": {
                            "$ref": "#/definitions/options"
                        },
                        "path": {
                            "$ref": "#/definitions/path"
                        },
                        "url": {
                            "$ref": "#/definitions/url",
                            "pattern": ".+"
                        }
                    },
                    "required": [
                        "bucket",
                        "operator",
                        "password",
                        "url"
                    ],
                    "default": {
                        "bucket": "",
                        "operator": "",
                        "password": "",
                        "url": ""
                    }
                },
                "smms-user": {
                    "description": "$(extensions) smms-user: https://sm.ms/login\n\ninstall plugin: \"picgo install picgo-plugin-smms-user\"",
                    "type": "object",
                    "properties": {
                        "Authorization": {
                            "$ref": "#/definitions/token"
                        }
                    },
                    "required": [
                        "Authorization"
                    ],
                    "default": {
                        "Authorization": ""
                    }
                },
                "gitee": {
                    "description": "$(extensions) gitee-uploader.\ninstall plugin: \"picgo install picgo-plugin-gitee-uploader\"",
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/gitHosting"
                        }
                    ],
                    "properties": {
                        "customUrl": {
                            "$ref": "#/definitions/url"
                        },
                        "customPath": {
                            "$ref": "#/definitions/path"
                        }
                    },
                    "required": [
                        "repo",
                        "token"
                    ],
                    "default": {
                        "repo": "",
                        "branch": "master",
                        "token": ""
                    }
                },
                "githubPlus": {
                    "description": "$(extensions) github-plus.\ninstall plugin: \"picgo install picgo-plugin-github-plus\"",
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/gitHosting"
                        }
                    ],
                    "properties": {
                        "customUrl": {
                            "$ref": "#/definitions/url"
                        },
                        "origin": {
                            "$ref": "#/definitions/origin",
                            "default": "gitee"
                        }
                    },
                    "required": [
                        "repo",
                        "token"
                    ],
                    "default": {
                        "repo": "",
                        "branch": "master",
                        "token": "",
                        "origin": "gitee"
                    }
                },
                "current": {
                    "description": "current uploader in use. Compatible keeping for PicGo-GUI",
                    "type": "string",
                    "default": "smms"
                }
            },
            "default": {
                "uploader": "smms",
                "smms": {
                    "token": ""
                },
                "current": "smms"
            }
        },
        "picgoPlugins": {
            "description": "Controls wether to active the plugin.",
            "type": "object",
            "patternProperties": {
                "^picgo-plugin-.*$": {
                    "type": "boolean",
                    "default": true
                }
            },
            "default": {}
        }
    },
    "default": {
        "picBed": {
            "uploader": "smms",
            "smms": {
                "token": ""
            },
            "current": "smms"
        },
        "picgoPlugins": {}
    }
}